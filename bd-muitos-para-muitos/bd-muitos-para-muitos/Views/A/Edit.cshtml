@model bd_muitos_para_muitos.Models.A

@{
   ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using(Html.BeginForm()) {
   @Html.AntiForgeryToken()

   <div class="form-horizontal">
      <h4>A</h4>
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(model => model.ID)

      <div class="form-group">
         @Html.LabelFor(model => model.NomeA1, htmlAttributes: new { @class = "control-label col-md-2" })
         <div class="col-md-10">
            @Html.EditorFor(model => model.NomeA1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeA1, "", new { @class = "text-danger" })
         </div>
      </div>

      <div class="form-group">
         @Html.LabelFor(model => model.NomeA2, htmlAttributes: new { @class = "control-label col-md-2" })
         <div class="col-md-10">
            @Html.EditorFor(model => model.NomeA2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeA2, "", new { @class = "text-danger" })
         </div>
      </div>

      <div class="form-group">
         <span class="control-label col-md-2">Elementos de B associados a A</span>
         <div class="col-md-10">
            @{ string selected = "";}
            @foreach(var item in ViewBag.ListaObjetosDeB) {
               selected = "";
               foreach(int opcaoID in Model.ListaDeObjetosDeB.Select(b => b.ID)) {
                  if(item.ID == opcaoID) { selected = "checked"; }
               }
               <input type="checkbox" name="opcoesEscolhidasDeB" value="@item.ID" @selected /> @item.NomeB
               <br />
            }
         </div>
      </div>



      <div class="form-group">
         <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
         </div>
      </div>
   </div>
}

<div>
   @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
